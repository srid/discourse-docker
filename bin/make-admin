#!/bin/bash
# Make the given user an admin.

set -e

USERNAME=$1

if [ -z "$USERNAME" ]; then
    echo "No username specified."
    exit 1
fi

. bin/postgresql-info

export PGPASSWORD=postgres
CMD="psql -p $POSTGRES_PORT -U root -h $POSTGRES_HOST -d postgres"

set -x
echo UPDATE users SET admin = true WHERE username = \'$USERNAME\'\; | $CMD

